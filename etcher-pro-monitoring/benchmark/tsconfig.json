{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true
  }
}
